        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Максимальне значення" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.262,0.47" Grid.ColumnSpan="2"/>
